<div class="container">
  <div class="col-7 mx-auto">
    <h3>Add a new dose</h3>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-group">

        <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
        <%= f.input :description, class: 'form-control' %>

      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>

    <div class="mt-5">
      <%= link_to cocktails_path do %>
        <i class="fa fa-undo" aria-hidden="true"> Back to checklist</i>
      <% end %>
    </div>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content text-center mt-5">
    <h1>Le Wagon's cocktails</h1>
    <p>Awesome beverages for developers nightlife</p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg mt-5" %>
  </div>
</div>

<div class="container">
  <div class="row card-deck">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card my-3">
          <div class="card-description">
            <h2 class="card-title text-white"><%= cocktail.name %></h2>
            <%= link_to "More", cocktail_path(cocktail), class: 'btn btn-primary'%>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

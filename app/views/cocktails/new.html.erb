<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mb-5">Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <div class="mt-5">
    <%= link_to root_path do %>
      <i class="fa fa-undo" aria-hidden="true"> Back to all cocktails</i>
    <% end %>
  </div>
</div>

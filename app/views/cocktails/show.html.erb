<div class="jumbotron jumbotron-fluid mt-5">
  <div class="container">
    <h3 class="text-center text-light">Recipe Name: <%= @cocktail.name %></h3>
  </div>
</div>


<div class="container mt-5">
  <div class="row">
    <table class="table table-bordered ml-5">
      <tbody>
        <thead>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Action</th>
        </thead>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="d-flex justify-content-betwee mx-auto">
      <div class="ml-4">
        <%= link_to new_cocktail_dose_path(@cocktail) do %>
          <i class="fas fa-plus" aria-hidden="true"> Add Dose</i>
        <% end %>
      </div>
      <div class="ml-5">
        <%= link_to root_path do %>
          <i class="fa fa-undo" aria-hidden="true"> Back to all cocktails</i>
        <% end %>
      </div>
    </div>
  </div>

</div>






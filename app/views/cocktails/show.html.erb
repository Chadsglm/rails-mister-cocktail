<div class="container mt-5">

  <div class="row">
    <div class="col-sm-12 col-md-6 mt-5" >
      <h3>Recipe Name: <%= @cocktail.name %></h3>
      <div class="d-flex justify-content-between">
        <img src="<%= @cocktail.img_url %>" alt="<%= @cocktail.name %>" class="img rounded float-left d-flex justify-content-between">
        <table class="table table-bordered ml-5">
          <tbody>
            <thead>
              <th>Ingredient</th>
              <th>Description</th>
              <th>Action</th>
            </thead>
            <% @cocktail.doses.each do |dose| %>
              <tr>
                <td><%= dose.ingredient.name %></td>
                <td><%= dose.description %></td>
                <td>
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash destroy_dose"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <h4><%= link_to "Add dose", new_cocktail_dose_path(@cocktail) %></h4>

      <div class="mt-5">
        <%= link_to root_path do %>
          <i class="fa fa-undo" aria-hidden="true"> Back to all cocktails</i>
        <% end %>
      </div>
    </div>
  </div>

</div>

